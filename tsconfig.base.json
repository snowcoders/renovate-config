/*
Root tsconfig which containts the more stylistic options available through tsconfig
Not meant for direct consumption
*/
{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    // Let eslint catch no fall throughs
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  }
}
