{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default renovate config that repositories referencing this repo will use",
  "extends": ["config:base"],

  "automerge": true,
  "azureAutoComplete": true,
  "packageRules": [
    {
      "ignoreUnstable": false,
      "matchPackageNames": [
        "@snowcoders/renovate-config",
        "exec-if-exists",
        "jest-react-mock-utils",
        "react-context-store",
        "sortier"
      ]
    },
    {
      "groupName": "Release It",
      "matchPackageNames": ["/release-it/"]
    }
  ]
}
