{
  "author": "k2snowman69",
  "description": "Renovate and other configs for all Snowcoders projects to inherit from",
  "devDependencies": {
    "@snowcoders/sortier": "2.3.2",
    "husky": "1.2.1",
    "lint-staged": "8.1.0",
    "npm-which": "^3.0.1",
    "prettier": "1.15.3",
    "rimraf": "2.6.2",
    "typescript": "3.2.2"
  },
  "license": "MIT",
  "name": "@snowcoders/renovate-config",
  "renovate-config": {
    "default": {
      "automerge": true,
      "automergeType": "pr",
      "extends": [
        "config:base"
      ],
      "rangeStrategy": "auto"
    }
  },
  "repository": "github:snowcoders/renovate-config",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build"
  },
  "tsconfig": "./tsconfig.base.json",
  "version": "0.1.0"
}
