{
  "author": "k2snowman69",
  "dependencies": {
    "exec-if-exists": "^3.0.0"
  },
  "description": "Renovate and other configs for all Snowcoders projects to inherit from",
  "devDependencies": {
    "@snowcoders/sortier": "3.3.0",
    "@types/jest": "27.5.1",
    "@typescript-eslint/eslint-plugin": "5.24.0",
    "@typescript-eslint/parser": "5.24.0",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "5.1.3",
    "jest": "28.1.0",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.2",
    "tslib": "2.4.0",
    "typescript": "4.6.4"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "name": "@snowcoders/renovate-config",
  "renovate-config": {
    "default": {
      "automerge": true,
      "azureAutoComplete": true,
      "extends": [
        "group:monorepos",
        "group:recommended"
      ],
      "packageRules": [
        {
          "allowedVersions": "<5",
          "description": "Husky@5.x.x's license is not intended for private projects",
          "matchPackageNames": [
            "husky"
          ]
        }
      ]
    }
  },
  "repository": "github:snowcoders/renovate-config",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf coverage dist",
    "prepare": "npm run clean && npm run build",
    "test": "jest"
  },
  "tsconfig": "./tsconfig.base.json",
  "version": "2.0.3"
}
